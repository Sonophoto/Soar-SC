        ^types.type <t>)
   (<t> ^name |Terran SCV|
        ^id <type-id>)
   (<u> ^type <type-id>
        ^carrying 0
        ^idle 0
        ^id <id>)
-->
   (<s> ^operator <o> + =)
   (<o> ^name build-supply-depot-non-idle
        ^worker <id>)
}


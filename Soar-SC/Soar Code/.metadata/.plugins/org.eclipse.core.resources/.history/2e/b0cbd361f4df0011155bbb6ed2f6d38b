sp {propose*build-supply-depot-idle
   (state <s> ^name Soar-SC
              ^superstate nil
              ^io.input-link <i>)
   (<i> ^minerals <m> > 99
        ^units.unit <u>
        ^types.type <t>)
   (<t> ^name |Terran SCV|
        ^id <type-id>)
   (<u> ^type <type-id>
        ^idle 1
        ^id <id>)
-->
   (<s> ^operator <o> + =)
   (<o> ^name build-supply-depot
        ^worker <id>
        ^idle 1)
}

sp {propose*build-supply-depot-non-idle
   (state <s> ^name Soar-SC
              ^superstate nil
              ^io.input-link <i>)
   (<i> ^minerals <m> > 99
        ^units.unit <u>
        ^types.type <t>)
   (<t> ^name |Terran SCV|
        ^id <type-id>)
   (<u> ^type <type-id>
        ^carrying 0
        ^idle 0
        ^id <id>
        ^carrying 0
        ^idle 0)
-->
   (<s> ^operator <o> + =)
   (<o> ^name build-supply-depot
        ^worker <id>)
}

sp {propose*build-supply-depot-carrying-non-idle
   (state <s> ^name Soar-SC

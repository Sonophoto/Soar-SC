        ^idle 0)
}

sp {elaboration*building-supply-depot-better-than-build-scv
   (state <s> ^operator <o1>
              ^operator <o2>)
   (<o1> ^name build-supply-depot)
   (<o2> ^name build-scv)
-->
   (<s> ^operator <o1> > <o2>)
}

sp {elaboration*building-supply-depot-better-than-build-scv
   (state <s> ^operator <o1>
              ^operator <o2>)
   (<o1> ^name build-supply-depot)
   (<o2> ^name gather-minerals)
-->
   (<s> ^operator <o1> > <o2>)
}
 
   
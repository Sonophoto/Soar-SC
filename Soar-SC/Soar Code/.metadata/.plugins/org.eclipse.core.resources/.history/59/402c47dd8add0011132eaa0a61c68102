sp {propose*build-scv
   (state <s> ^name Soar-SC
              ^io.input-link <i>)
   (<i> ^minerals <m> > 99
        ^units.building <b>)
   (<b> ^command-center 1
        ^id <id>)
-->
   (<s> ^operator <o> +)
   (<o> ^name build-scv
        ^location <id>)
}

sp {apply*build-scv
   (state <s> ^operator <op>
              ^io.output-link <o>)
   (<op> ^name build-scv
         ^location <id>)
-->
   (<o> ^build <b>)
   (<b> ^type scv
        ^location <id>)
}
sp {apply*build-unit
   (state <s> ^operator <op>
              ^io.output-link <o>
              ^io.input-link.types.type <unit-type>)
   (<op> ^name build-unit
         ^location <id>
         ^type <type-id>)
   (<unit-type> ^id <type-id>
                ^mineral-cost <mineral-cost>
                ^gas-cost <gas-cost>)
-->
   (<o> ^build-unit <b>)
   (<b> ^type <type-id>
        ^building <id>)
}

#Preference rules

sp {pref*build-unit-better-than-gather-minerals
   (state <s> ^operator <o1> +
              ^operator <o2> +)
   (<o1> ^name build-unit)
   (<o2> ^name gather-minerals)
-->
   (<s> ^operator <o1> > <o2>)
}
